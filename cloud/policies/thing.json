{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "iot:Publish"
            ],
            "Resource": [
                "arn:aws:iot:ap-southeast-1:<ACCOUNT_ID>:topic/$aws/things/lightstick*/shadow/get",
                "arn:aws:iot:ap-southeast-1:<ACCOUNT_ID>:topic/$aws/things/lightstick*/shadow/update",
                "arn:aws:iot:ap-southeast-1:<ACCOUNT_ID>:topic/lightstick/lightstick*/data"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "iot:Receive"
            ],
            "Resource": [
                "arn:aws:iot:ap-southeast-1:<ACCOUNT_ID>:topic/$aws/things/lightstick*/shadow/get/*",
                "arn:aws:iot:ap-southeast-1:<ACCOUNT_ID>:topic/$aws/things/lightstick*/shadow/update/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "iot:Subscribe"
            ],
            "Resource": [
                "arn:aws:iot:ap-southeast-1:<ACCOUNT_ID>:topicfilter/$aws/things/lightstick*/shadow/get/*",
                "arn:aws:iot:ap-southeast-1:<ACCOUNT_ID>:topicfilter/$aws/things/lightstick*/shadow/update/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "iot:Connect"
            ],
            "Resource": "*"
        }
    ]
}
